<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/map_bottom_view_id"
    >

    <Button android:id="@+id/map_view_bottom_left"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@color/mapViewBottomButton"
        android:textSize="8dp"
        android:layout_marginRight="5dp"
        android:text="@string/cancel_navigation"
        />

    <Button android:id="@+id/map_view_bottom_right"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@color/mapViewBottomButton"
        android:textSize="8dp"
        android:text="@string/slience_navigation"
        />

</LinearLayout>